<article class="product-item">
  <img src="<%= product.imageURL %>" alt="<%= product.title %>">
  <div class="product-item-content">
    <h2>
      <%= product.title %>
    </h2>
    <div class="product-item-actions">
      <% if (locals.isAdmin) { %>
      <a href="/admin/products/<%= product.id %>" class="btn btn-alt">View & Edit</a>
      <button class="btn btn-alt" data-productid="<%= product.id %>" data-producttitle="<%= product.title %>">Delete</button>
      <% } else { %>
      <a href="/products/<%= product.id %>" class="btn btn-alt">View Details</a>
      <% } %>
    </div>
  </div>
</article>
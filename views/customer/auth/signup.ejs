<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../../shared/includes/head", {pageTitle: "Signup"}) %>
  <link rel="stylesheet" href="styles/auth.css">
  <link rel="stylesheet" href="styles/forms.css">
</head>

<body>
  <%- include("../../shared/includes/header") %>
  <main>
    <h1>Create New Account</h1>
    <% if (inputData.errorMessage) { %>
    <section class="alert">
      <h2>Invalid Input</h2>
      <p><%= inputData.errorMessage %></p>
    </section>
    <% } %>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value=<%= locals.csrfToken %>>
      <p>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="<%=inputData.email%>" required>
      </p>
      <p>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" minlength="6" value="<%=inputData.password%>" required>
      </p>
      <p>
        <label for="confirm-password">Confirm Password:</label>
        <input type="password" name="confirm-password" id="confirm-password" value="<%=inputData.confirmPassword%>" required>
      </p>
      <hr>
      <p>
        <label for="fullname">Full Name:</label>
        <input type="text" name="fullname" id="fullname" value="<%=inputData.fullname%>" required>
      </p>
      <p>
        <label for="street">Street Name:</label>
        <input type="text" name="street" id="street" value="<%=inputData.street%>" required>
      </p>
      <p>
        <label for="zip">Zip Code:</label>
        <input type="text" name="zip" id="zip" minlength="5" maxlength="5" value="<%=inputData.zip%>" required>
      </p>
      <p>
        <label for="city">City:</label>
        <input type="text" name="city" id="city" value="<%=inputData.city%>" required>
      </p>
      <button class="btn">Create Account</button>
      <p id="switch-form"><a href="/login">Login Instead</a></p>

    </form>
  </main>
</body>

</html>